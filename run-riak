function run_riak() {
NUM=$1
docker run -d \
  --rm \
  -it \
  --name "dev${NUM}" \
  --network riak \
  -p 100${NUM}8:8098 \
  -p 100${NUM}7:8087 \
  -v $(pwd)/dev${NUM}-etc:/etc/riak \
  --mount type=bind,source="$(pwd)/dev${NUM}-scratch",target=/scratch \
  bryanhuntesl/riak-centos7:2.2.6-OTP_R16B02_basho10 riak console
}

run_riak 1
run_riak 2
run_riak 3
